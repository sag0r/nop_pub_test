@model IList<CategoryModel>
@if (Model.Count > 0)
{

    <section class="section-content padding-y bg">
        <div class="container">
            <div class="row">

                @foreach (var item in Model)
                {
                <div class="col-12 col-sm-6 col-md-4 col-xl-3 cursor-pointer">
                    <div class="card-banner overlay-gradient" style="min-height:230px; background-image: url('@item.PictureModel.ImageUrl');">
                        <div class="card-img-overlay text-white text-center">
                            <h5 class="card-title pt-5">
                                <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" class="card-title text-white" title="@item.PictureModel.Title">
                                    @item.Name
                                </a>
                            </h5>
                            <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" class="btn btn-success mt-2"> View more </a>
                        </div>
                    </div>
                </div>
                }

            </div>
        </div>
    </section>

}