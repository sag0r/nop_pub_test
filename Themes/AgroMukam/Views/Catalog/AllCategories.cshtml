@model TopMenuModel

@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts("All Categories");
    //page class
    Html.AppendPageCssClassParts("html-all-categories-page hide-nav");

    Model.Categories = Model.Categories
        .Where(x => x.IncludeInTopMenu
            && !x.Name.Contains("Service")
            && !x.Name.Contains("Courier"))
        .ToList();
}

<style>

    .close-mob-nav {
        position: fixed;
        top: 10px;
        right: 10px;
        z-index: 999;
    }

    .all-categories-page {
        /*padding-top: 56px;*/
        height: 100vh;
    }

    .navbar-brand {
        font-size: 16px !important;
    }

    .category-nav {
        width: 90px;
        background: #fff;
        height: 100%;
    }

        .category-nav .nav-link {
            background: transparent;
            color: #8c8c8c;
            padding-left: 5px;
            padding-right: 5px;
            border-bottom: 1px solid rgba(105, 164, 31, .09);
        }
            .category-nav .nav-link:not(:first-child) {
                opacity: .5;
            }
            .category-nav .nav-link.active {
                position: relative;
                background: rgba(105, 164, 31, .8);
                color: #fff;
                box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
                z-index: 1;
                opacity: 1;
            }

                .category-nav .nav-link.active:after {
                    right: -10px;
                    border-left: 10px solid rgba(105, 164, 31, .8);
                }

                .category-nav .nav-link.active:after {
                    content: '';
                    position: absolute;
                    top: 0;
                    width: 0;
                    height: 0;
                    border-top: 36px solid transparent;
                    border-bottom: 36px solid transparent;
                }

            .category-nav .nav-link img {
                width: 24px;
            }

            .category-nav .nav-link span {
                font-size: 12px;
                line-height: 14px;
                height: 28px;
                overflow: hidden;
            }

    .tab-content {
        box-shadow: 0 0 14px rgba(0,0,0,0.06);
    }

    .accordion .card-header .btn {
        background: rgba(105, 164, 31, .4);
        font-size: 12px !important;
        line-height: 16px;
    }
    .accordion .card-header .btn.collapsed {
        background: rgba(105, 164, 31, .2);
    }

    .accordion .card-header {
        border: 1px solid rgba(105, 164, 31, .15);
        border-bottom: 0;
    }
    .accordion .card-body {
        border: 1px solid rgba(105, 164, 31, .5);
        border-top: 0;
        margin-left: 1px;
        margin-right: 1px;
    }

    @@media all and (max-width: 460px) {
        .tab-pane .col-4.px-1.py-1 {
            flex: 50%;
            max-width: 50%;
        }
    }

</style>

