<div class="all-categories-page">
    <div class="w-100 h-100">
        <div class="row no-gutters h-100">
            <div class="col-auto">
                <nav class="category-nav">
                    <div class="nav flex-column" id="nav-tab" role="tablist">

                        @* Home *@
                        <a class="nav-link bg-white pt-3 pb-3"
                           href="/">

                            <img src="/Themes/AgroMukam/Content/images/logo-new-small.png"
                                 class="d-block m-auto" />

                        </a>

                        @* Just for you *@
                        <a class="nav-link active"
                           id="nav-00-tab"
                           data-toggle="tab"
                           href="#nav-00"
                           role="tab"
                           aria-controls="nav-00"
                           aria-selected="true">

                            <img src="/Themes/AgroMukam/Content/images/category-icons/just-for-you.png"
                                 class="d-block m-auto" />
                            <span class="d-block text-center mt-1"
                                  style="font-size: 12px; font-weight: 400;">
                                Just for You
                            </span>

                        </a>

                        @* Category Tabs *@
                        @foreach (var category in Model.Categories)
                        {
                            var imgSrc = "/Themes/Venture/Content/images/category-icons/" + category.SeName + "-colorful.png";

                            <a class="nav-link"
                               id="nav-@category.Id-tab"
                               data-toggle="tab"
                               href="#nav-@category.Id"
                               role="tab"
                               aria-controls="nav-@category.Id"
                               aria-selected="false">
                                <img src="@imgSrc"
                                     alt="@category.Name"
                                     class="d-block m-auto" />
                                <span class="d-block text-center mt-1"
                                      style="">
                                    @category.Name
                                </span>
                            </a>
                        }
                    </div>
                </nav>
            </div>
            <div class="col">
                <div class="tab-content bg-white h-100 p-2" id="nav-tabContent">

                    @* TabContent = Just for you *@
                    <div class="tab-pane fade show active"
                         id="nav-00"
                         role="tabpanel"
                         aria-labelledby="nav-00-tab">

                        @{
                            var randomCategories = new List<CategorySimpleModel>();

                            foreach (var category in Model.Categories)
                            {
                                if (category.HaveSubCategories)
                                {
                                    foreach (var subcategory in category.SubCategories)
                                    {
                                        randomCategories.Add(subcategory);
                                    }
                                }
                            }

                            <div class="row no-gutters">
                                @{
                                    randomCategories = randomCategories.Take(15).ToList();
                                    foreach (var category in randomCategories)
                                    {
                                        <div class="col-4 px-1 py-1">
                                            <div class="card-banner cursor-pointer"
                                                 onclick="setLocation('/@category.SeName')"
                                                 style="height:100px;
                                                background-image: url('@category.PictureModel.ImageUrl');">
                                                <article class="card-body bg-gradient-green text-white p-2 d-flex align-items-center text-center">
                                                    <h6 class="card-title w-100">@category.Name</h6>
                                                </article>
                                            </div>
                                        </div>
                                    }

                                }
                            </div>


                        }

                    </div>

                    @* TabContent = Categories *@
                    @foreach (var category in Model.Categories)
                    {
                        <div class="tab-pane p-1 fade"
                             id="nav-@category.Id"
                             role="tabpanel"
                             aria-labelledby="nav-@category.Id-tab">

                            <div class="w-100 mb-2">
                                <div
                                     class="card-banner cursor-pointer"
                                     onclick="setLocation('/@category.SeName')"
                                     style="height:120px; background-image: url('@category.PictureModel.ImageUrl');">
                                    <article class="card-body bg-gradient-green text-white p-2 d-flex align-items-center text-center">
                                        <h6 class="card-title w-100">@category.Name</h6>
                                    </article>
                                </div>
                            </div>

                            @if (category.HaveSubCategories)
                            {
                                @await Html.PartialAsync("_SubCategories", category.SubCategories)
                            }

                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<script asp-location="Footer">
    $(document).ready(function () {
        console.log('m-model', JSON.parse(`@Json.Serialize(Model)`));

        $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
            $('.navbar-brand span').text($(e.target).find('span').text().trim());
            
        })

        $('.accordion').on('shown.bs.collapse', function () {
            $(this).find('button:not(.collapsed) > i')
                .removeClass('fa-chevron-down').addClass('fa-chevron-up');
        });

        $('.accordion').on('hidden.bs.collapse', function () {
            $(this).find('button.collapsed > i')
                .removeClass('fa-chevron-up').addClass('fa-chevron-down');
        });

        $('.close-mob-nav button').click(function () {
            const host = window.location.origin;
            if (document.referrer.includes(host)) {
                window.history.back();
            } else {
                window.location.assign(host);
            }
        });

    });
</script>