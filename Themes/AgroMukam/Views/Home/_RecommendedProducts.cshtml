@using Nop.Services.Catalog
@inject IProductService productService

@{
    var products = productService.GetAllProductsDisplayedOnHomepage();
} 

<section class="padding-bottom-sm container-fluid">

    <header class="section-heading heading-line">
        <h4 class="title-section">Recommended items</h4>
    </header>

    <div class="row row-sm">
        @foreach (var item in products)
        {
            <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                <div class="card card-sm card-product-grid">
                    <a href="#" class="img-wrap"> <img src="/Themes/AgroMukam/Content/images/placeholder.png" loading="lazy"> </a>
                    <figcaption class="info-wrap">
                        <a href="#" class="title">@item.Name</a>
                        <div class="price mt-1"> @item.Price </div>
                    </figcaption>
                </div>
            </div>
        }
    </div> <!-- row.// -->
</section>